<h1><%= @task.id ? "Edit #{@task.title}" : "Add New Task" %></h1>
<hr />
<%= form_with(model: @task, local: true) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, required: true, placeholder: "Task Name" %>
    <br />
    <br />
    <%= f.label :desc %>
    <%= f.text_field :desc, required: true, placeholder: "Description" %>
    <br />
    <br />
    <br />
    <br />
  </div>
    <%= f.submit %>
<%end%>